@{
    Layout = "_WindowFormLayout";
}
<div class="layui-layout layui-layout-window">
    @using (Html.BeginForm<EditModel>(""))
    {
        <div class="layui-body">
            @Html.InputFor(x => x.Dto.Id)
            @Html.InputFor(x => x.Dto.Type)
            @Html.InputFor(x => x.Dto.Name)
            <div class="layui-form-item">
                <label class="layui-form-label">头像</label>
                <div id="image" class="layui-input-block">
                </div>
            </div>
            @Html.InputFor(x => x.Dto.OriginalId)
            @Html.InputFor(x => x.Dto.WeixinId)
            @Html.InputFor(x => x.Dto.AppId)
            @Html.InputFor(x => x.Dto.AppSecret)
            @Html.InputFor(x => x.Dto.Token)
        </div>
        <div class="layui-footer">
            @Html.ActionsForSubmitAndClose()
        </div>
    }
</div>
@section Scripts
    {
    <script src="~/js/ku/ku.image.picker.js"></script>
    <script>
        layui.use(['form'], function () {
            var form = layui.form;

            $("#image").kuImagePicker({
                field_path: "Image",
                max_count: 1
            });
            $("#image").kuImagePicker("loadImage", '@Html.Raw(Model.Dto.Image)');
        });
    </script>
}
