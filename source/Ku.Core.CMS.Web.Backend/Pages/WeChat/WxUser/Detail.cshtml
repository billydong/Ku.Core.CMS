@{
    Layout = "~/Pages/_WindowFormLayout.cshtml";
}
<div class="layui-layout layui-layout-window">
    @using (Html.BeginForm<DetailModel>(""))
    {
        <div class="layui-body">
            @Html.ShowFor(x => x.Dto.OpenId)
            @Html.ShowFor(x => x.Dto.UnionId)
            @Html.ShowFor(x => x.Dto.NickName, x => x.Dto.Remark)
            @Html.ShowFor(x => x.Dto.HeadImgUrl)
            @Html.ShowFor(x => x.Dto.Sex)
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">地区</label>
                    <div class="layui-input-inline">
                        <label class="layui-form-label-show">@Model.Dto.Country @Model.Dto.Province @Model.Dto.City</label>
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">语言</label>
                    <div class="layui-input-inline">
                        <label class="layui-form-label-show">@Model.Dto.Language</label>
                    </div>
                </div>
            </div>
            @Html.ShowFor(x => x.Dto.IsSubscribe, x => x.Dto.SubscribeTime)
        </div>
        <div class="layui-footer">
            @Html.ActionsForClose()
        </div>
    }
</div>
@section Scripts
    {
    <script>
        layui.use(['form'], function () {
            var form = layui.form;
        });
    </script>
}
