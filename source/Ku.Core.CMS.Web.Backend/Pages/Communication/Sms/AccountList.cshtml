}
@{
    Layout = "_Layout";
}
<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-tab layui-tab-brief" lay-filter="tabMian">
            <ul class="layui-tab-title">
                <li lay-id="list" class="layui-this">短信账户</li>
                <li lay-id="recycles"><i class="layui-icon">&#xe640;</i> 回收站</li>
            </ul>
            <div class="layui-tab-content">
                <div class="layui-tab-item layui-show">
                    <div class="toolbar">
                        <action title="刷新" action="grid:reload['#list']" />
                        <action auth-code="communication.smsaccount.edit" text="新增" icon="&#xe608;" action="window:/Communication/Sms/AccountEdit" after="grid:reload['#list']" />
                        <action auth-code="communication.smsaccount.delete" text="批量删除" icon="&#xe640;" action="batch:['#list', 'post:AccountList/Delete']" after="grid:reload" />
                    </div>
                    <table id="list"></table>
                </div>
                <div class="layui-tab-item">
                    <div class="toolbar">
                        <action title="刷新" action="grid:reload['#recycles']" />
                        <action auth-code="communication.smsaccount.restore" text="批量恢复" icon="&#xe65c;" action="batch:['#recycles', 'post:AccountList/Restore']" after="grid:reload" />
                    </div>
                    <table id="recycles"></table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    <script>
    layui.use(['element'], function () {
        var element = layui.element;

        var cols = [
            { field: 'Name', title: '名称', width: 200 },
            { field: 'Type', title: '类型', width: 100, enum: true },
            { field: 'IsEnable', title: '是否可用', width: 100, switch: true },
            { field: 'CreateTime', title: '创建时间', width: 170, align: 'center' }
        ];

        $("#list").kuGrid({
            url: 'AccountList/Data',
            cols: [cols.concat([
                {
                    title: '操作', fixed: 'right', width: 160, align: 'center',
                    toolbar: grid_templet_operate([
                        { code: "communication.sms.account.edit", text: "编辑", action: `window:/Communication/Sms/AccountEdit?id={{d.Id}}`, after:"grid:reload['#list']" },
                        { code: "communication.sms.account.delete", text: "删除", action: `post:AccountList/Delete?id={{d.Id}}` }
                    ])
                }
            ])],
            onWhere: function () {
                return {
                    IsDeleted: false
                };
            }
        });

        element.on('tab(tabMian)', function () {
            if (this.getAttribute('lay-id') === "recycles" && !$("#recycles").hasClass("ku-grid"))
            {
                //初始化回收站
                $("#recycles").kuGrid({
                    url: 'AccountList/Data',
                    cols: [cols.concat([
                        {
                            title: '操作', fixed: 'right', width: 160, align: 'center',
                            toolbar: grid_templet_operate([
                                { code: "communication.sms.account.restore", text: "恢复", action: `post:AccountList/Restore?id={{d.Id}}` }
                            ])
                        }
                    ])],
                    onWhere: function () {
                        return {
                            IsDeleted: true
                        };
                    }
                });
            }
        });
    });
    </script>
}
